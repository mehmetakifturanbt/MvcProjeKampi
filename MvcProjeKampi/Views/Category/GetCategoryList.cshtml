@using EntityLayer.Concrete <!-- Razor Syntax (Html içinde C# komutu kullanabilmek için [et] işareti kullanılır)  -->
@model List<Category> 

@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<br/>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Durum</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td>@item.CategoryStatus</td>
        </tr>
    }

</table>
<br/>
<a href="/Category/AddCategory" class="btn bg-info">Yeni Kategori</a>
